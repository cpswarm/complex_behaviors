<?xml version="1.0"?>
<launch>
    <arg name="gui" default="false" />
    <arg name="world" default="$(find mavlink_sitl_gazebo)/worlds/empty.world" />

    <!-- Gazebo simulator -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)" />
        <arg name="world_name" value="$(arg world)" />
    </include>

    <!-- UAV 1 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="1" />
        <arg name="x" value="-4" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

    <!-- UAV 2 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="2" />
        <arg name="x" value="-3" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

    <!-- UAV 3 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="3" />
        <arg name="x" value="-2" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

    <!-- UAV 4 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="4" />
        <arg name="x" value="-1" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

    <!-- UAV 5 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="5" />
        <arg name="x" value="1" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

    <!-- UAV 6 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="6" />
        <arg name="x" value="2" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

    <!-- UAV 7 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="7" />
        <arg name="x" value="3" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

    <!-- UAV 8 -->
    <include file="$(find sar)/launch/uav_sitl.launch">
        <arg name="id" value="8" />
        <arg name="x" value="4" />
        <arg name="y" value="-4" />
        <arg name="Y" value="1.571" />
    </include>

</launch>
