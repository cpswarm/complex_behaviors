<?xml version="1.0"?>
<launch>

    <arg name="id" default="0" />
    <arg name="x" default="0" />
    <arg name="y" default="0" />
    <arg name="output" default="log" />

    <!-- Behavior state machine -->
    <node pkg="storage" type="scout_state_machine.py" name="scout_state_machine_$(arg id)" output="$(arg output)" required="true" />

    <!-- Box searching coverage algorithm -->
    <include file="$(find ugv_random_walk)/launch/ugv_random_walk.launch">
        <arg name="id" value="$(arg id)" />
        <arg name="x" value="$(arg x)" />
        <arg name="y" value="$(arg y)" />
        <arg name="output" value="$(arg output)" />
    </include>

    <!-- TODO: add other behaviors -->

</launch>
