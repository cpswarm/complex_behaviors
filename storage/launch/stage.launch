<?xml version="1.0"?>
<launch>

    <arg name="gui" default="false" />
    <arg name="world" default="empty" />
    <arg name="scouts" default="1" />
    <arg name="workers" default="1" />
    <arg name="rng_seed" default="0" />

    <param name="rng_seed" value="$(arg rng_seed)" />
    <param name="use_sim_time" value="true" />

    <!-- Stage simulator -->
    <node if="$(arg gui)" name="stage" pkg="stage_ros" type="stageros" args="$(find storage)/world/$(arg world).world" required="true" />
    <node unless="$(arg gui)" name="stage" pkg="stage_ros" type="stageros" args="-g $(find storage)/world/$(arg world).world" required="true" />

    <!-- Scout UGVs -->
    <include file="$(find storage)/launch/scout.launch" if="$(eval scouts > 0)">
        <arg name="id" value="0" />
        <arg name="x" value="-0.5" />
        <arg name="y" value="-9.5" />
        <arg name="world" value="$(arg world)" />
        <arg name="simulation" value="true" />
    </include>
    <include file="$(find storage)/launch/scout.launch" if="$(eval scouts > 1)">
        <arg name="id" value="1" />
        <arg name="x" value="-1.5" />
