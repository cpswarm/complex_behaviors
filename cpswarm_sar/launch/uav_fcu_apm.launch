<?xml version="1.0"?>
<launch>
    <arg name="id" default="1" />
    <arg name="sitl_id" default="0" />
    <arg name="vehicle" default="iris" />
    <arg name="x" default="0" />
    <arg name="y" default="0" />
    <arg name="Y" default="0" />
    <arg name="output" default="screen" />

    <arg name="udp_port_obc" value="$(eval 14551 + sitl_id)" />
    <arg name="udp_port_fcu" value="$(eval 14555 + sitl_id)" />

    <!-- MAVROS -->
    <include file="$(find mavros)/launch/apm.launch">
        <arg name="fcu_url" value="udp://:$(arg udp_port_obc)@localhost:$(arg udp_port_fcu)" />
        <arg name="gcs_url" value="" />
        <arg name="tgt_system" value="$(arg id)" />
        <arg name="tgt_component" value="1" />
        <arg name="log_output" value="$(arg output)" />
    </include>

</launch>
